<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <ImageView
        android:id="@+id/imgPersonCall"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:src="@drawable/imagcall1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp" />
    <TextView
        android:id="@+id/txtName"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginTop="85dp"
        android:background="#80000000"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <ImageView
        android:id="@+id/Chat"
        android:layout_width="20dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toBottomOf="@id/imgPersonCall"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/chat" />
    <ImageView
        android:id="@+id/Call"
        android:layout_width="20dp"
        android:layout_height="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/Chat"
        android:src="@drawable/telephonecall"
        android:layout_marginLeft="35dp"/>
    <ImageView
        android:id="@+id/Video"
        android:layout_width="20dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toBottomOf="@id/imgPersonCall"
        app:layout_constraintLeft_toLeftOf="@id/imgPersonCall"
        android:src="@drawable/videoimage"
        android:layout_marginLeft="75dp"/>
    <ImageView
        android:id="@+id/More"
        android:layout_width="20dp"
        android:layout_height="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imgPersonCall"
        android:src="@drawable/more"
        android:layout_marginLeft="110dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>
